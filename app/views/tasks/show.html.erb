<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<p>
  <b>User:</b>
  <%= @task.user.username %>
</p>

<p>
  <b>Assigned date:</b>
  <% if(@task.assigned_date) %>
  	<%= @task.assigned_date.to_formatted_s(:long) %>
  <% end %>
</p>

<p>
  <b>Opened date:</b>
  <% if(@task.opened_date) %>
  	<%= @task.opened_date.to_formatted_s(:long) %>
  <% end %>
</p>

<p>
  <b>Expectation date:</b>
  <% if(@task.expectation_date) %>
  	<%= @task.expectation_date.to_formatted_s(:long) %>
  <% end %>
</p>

<p>
  <b>Closed date:</b>
  <% if(@task.closed_date) %>
  	<%= @task.closed_date.to_formatted_s(:long) %>
  <% end %>
</p>


<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
