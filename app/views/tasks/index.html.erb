<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Assigned date</th>
    <th>Opened date</th>
    <th>Expectation date</th>
    <th>Closed date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.user.username %></td>
    <td><%= task.assigned_date %></td>
    <td><%= task.opened_date %></td>
    <td><%= task.expectation_date %></td>
    <td><%= task.closed_date %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div class="dayHeaderContainer"></div>
<div class="gantt"></div>

<%= link_to 'New Task', new_task_path %>
